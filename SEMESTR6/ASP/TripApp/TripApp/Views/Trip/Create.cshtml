@model TripApp.Models.Trip

<h1 class="h3 mb-4 text-gray-800">Create</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create New Trip</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Destination" class="control-label">Destination</label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripDateStart" class="control-label">Start Date</label>
                <input asp-for="TripDateStart" class="form-control" />
                <span asp-validation-for="TripDateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripDateEnd" class="control-label">End Date</label>
                <input asp-for="TripDateEnd" class="form-control" />
                <span asp-validation-for="TripDateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
