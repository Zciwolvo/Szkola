@model TripApp.Models.Trip

<h1 class="h3 mb-4 text-gray-800">Delete</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Delete Trip</h6>
    </div>
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <div>
            <h4>Trip Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Destination</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Destination)</dd>
                <dt class="col-sm-2">Start Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TripDateStart)</dd>
                <dt class="col-sm-2">End Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TripDateEnd)</dd>
                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="TripId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
