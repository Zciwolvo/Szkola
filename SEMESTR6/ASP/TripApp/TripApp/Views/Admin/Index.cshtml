@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Admin Panel";
    var roles = ViewData["Roles"] as List<string>;
}

<h1 class="h3 mb-2 text-gray-800">Admin Panel</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User Management</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @foreach (var role in await UserManager.GetRolesAsync(user))
                                        {
                                            <span>@role</span>
                                            <br />
                                        }
                                    </td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="UpdateUserRole" method="post">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <select name="newRole" class="form-control">
                                                @foreach (var role in roles)
                                                {
                                                    <option value="@role">@role</option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-primary btn-sm">Update Role</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
